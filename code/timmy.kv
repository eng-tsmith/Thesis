<ScreenManagement>:
    ScreenMain:
    ScreenSettingsTraining:
    ScreenSettingsRealtime:


<ScreenMain>:
    name: 'screen_main'
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Train Network"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = 1
                root.manager.current = 'screen_settings_training'
        Button:
            text: "Real-Time Mode"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'screen_settings_realtime'
        Button:
            text: "Exit"
            on_press: app.stop()

<ScreenSettingsTraining>:
    name: 'screen_settings_training'
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Muss noch gemacht werden"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Go"
                on_press: app.train_ext()
            Button:
                text: "Back"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 1
                    root.manager.current = 'screen_main'
            Button:
                text: "Exit"
                on_press: app.stop()

<ScreenSettingsRealtime>:
    name: 'screen_settings_realtime'
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Muss noch gemacht werden"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Go"
                on_press: app.realtime_ext()
            Button:
                text: "Back"
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = 1
                    root.manager.current = 'screen_main'
            Button:
                text: "Exit"
                on_press: app.stop()